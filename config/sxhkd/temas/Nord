# Reload Sxhkd
super + Escape
	pkill -USR1 -x sxhkd;dunstify -i $HOME/.config/dunst/iconpng/arch.png SXHKDRC RECARGADO

# Launch Terminal Emulator 
super + Return
	alacritty
# Launch Terminal Emulator Whit Tmux
super + ctrl + alt +  t
	alacritty -e tmux

# Close Notification
ctrl + space
	dunstctl close

# Close All Notifications
ctrl + shift + space
	dunstctl close-all

# launch dmenu
super + @space
	rofi -show run

# Lanzar el menú que cambia la polybar
super + shift + p
	~/.config/scripts/polychange.sh

#choose the theme
super + shift + a
        bash ~/.config/scripts/Aspect.sh

# Launch Web Browser
super + w
	chromium

# Launch Web browser In Incognito Mode
super + shift + w 
	chromium --incognito


# Screenshots
Print
	gnome-screenshot

# Screenshot (only area)
super + Print 
	gnome-screenshot -a


# Launch Terminal Files Manager
super + r
	alacritty -e ranger

# Change Wallpaper
super + n
	feh --bg-fill --randomize ~/Imágenes/'Fondos de escritorio'/nord 

# Launch PDF Viewer
super + e
	evince

# Launch Music Player
super + m
	alacritty -e ncmpcpp 

# Launch System Monitor
super + h
	alacritty -e htop


# Launch Visual Studio Code
super + c
	code-oss

# Volume Down
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5% & amixer set Master 5%-

# Volume Up
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5% & amixer set Master 5%+

# Mute & Unmute Volume
XF86AudioMute
	
	{amixer sset Master mute;dunstify -i $HOME/.config/dunst/iconpng/arch.png Audio Deshabilitado,amixer sset Master unmute;dunstify -i $HOME/.config/dunst/iconpng/arch.png Audio Habilitado}


# Decrease Brightness
XF86MonBrightnessDown
	light -U 10

# Increase Brightness
XF86MonBrightnessUp
	light -A 10


# Lock PC
super + l 
	systemctl suspend & dm-tool lock

# Lock PC 2 XD
super + ctrl + x
	GLITCHICON=~/.config/glitchlock/stop.png ~/.config/glitchlock/glitchlock




#_______________________________________________________________
#
#     ██████╗ ███████╗██████╗ ██╗    ██╗███╗   ███╗
#     ██╔══██╗██╔════╝██╔══██╗██║    ██║████╗ ████║
